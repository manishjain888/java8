### log4j defined for Funding Component################################
log4j.rootCategory=DEBUG,LOANIQ_FUNDING_INTF_CONSOLE

#Console Appender defined for FUNDING Component processing
#log4j.logger.org.springframework=DEBUG,LOANIQ_FUNDING_INTF_CONSOLE
log4j.logger.com.rbs.rbsgbl.loaniq.generic=DEBUG,LOANIQ_FUNDING_DATA_PROCESS_FILE
log4j.logger.com.rbs.rbsgbl.loaniq.funding=DEBUG,LOANIQ_FUNDING_DATA_PROCESS_FILE
log4j.logger.com.rbs.rbsgbl.loaniq = WARN,LOANIQ_FUNDING_INTF_EVENT 

#Console appender property for FUNDING data Processing
log4j.appender.LOANIQ_FUNDING_INTF_CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.LOANIQ_FUNDING_INTF_CONSOLE.layout=org.apache.log4j.PatternLayout
log4j.appender.LOANIQ_FUNDING_INTF_CONSOLE.layout.ConversionPattern=%d [%t] %-5p (%F)- %m%n

#rolling file appender for FUNDING data Processing
log4j.appender.LOANIQ_FUNDING_DATA_PROCESS_FILE=org.apache.log4j.RollingFileAppender
log4j.appender.LOANIQ_FUNDING_DATA_PROCESS_FILE.File=logs/funding/FundProcessLog.log
log4j.appender.LOANIQ_FUNDING_DATA_PROCESS_FILE.MaxFileSize=2500KB
log4j.appender.LOANIQ_FUNDING_DATA_PROCESS_FILE.MaxBackupIndex=50
log4j.appender.LOANIQ_FUNDING_DATA_PROCESS_FILE.Append=true
log4j.appender.LOANIQ_FUNDING_DATA_PROCESS_FILE.layout=org.apache.log4j.PatternLayout
log4j.appender.LOANIQ_FUNDING_DATA_PROCESS_FILE.layout.ConversionPattern=%d [%t] %-5p (%F) - %m%n

#Windows  NT Event Appender for FUNDING data Processing error
log4j.appender.LOANIQ_FUNDING_INTF_EVENT = org.apache.log4j.nt.NTEventLogAppender 
log4j.appender.LOANIQ_FUNDING_INTF_EVENT.threshold=WARN 
log4j.appender.LOANIQ_FUNDING_INTF_EVENT.source=Funding Interface 
log4j.appender.LOANIQ_FUNDING_INTF_EVENT.layout=org.apache.log4j.PatternLayout 
log4j.appender.LOANIQ_FUNDING_INTF_EVENT.layout.ConversionPattern = %-4r [%t] %-5p (%F) - %m%n 
