<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

 	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:datastore.spring.properties</value>				
				<value>classpath:credentialKey.properties</value>
				<value>classpath:credential.properties</value>		
				<value>classpath:loanIQ.properties</value>	
				<value>classpath:FundMessage.properties</value>	
			</list>

		</property>
	</bean>  
	
	<!-- sqlMapper to Map the Sgl Data Mapper File Configurations. -->
	<bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		<property name="configLocation" >
			<value>classpath:/com/rbs/rbsgbl/loaniq/funding/datastore/funding-app-maps.xml</value>

		</property>	
		<property name="dataSource">
            <ref bean="oracleDataSource" />
        </property>	
	</bean>
	
	<bean id="sqlMapClientTemplate" class="org.springframework.orm.ibatis.SqlMapClientTemplate">
        <property name="sqlMapClient">
            <ref local="sqlMapClient" />
        </property>
    </bean>  


	   
    		<!-- Password Manager -->
	<bean id="passwordDecryptor" class="com.rbs.rbsgbl.loaniq.funding.process.PasswordDecryptor" init-method="init">
		<property name="strKeyString" value="${credential_keyFile}"/>
		<property name="strPassword" value="${cred.funding_db}"/>
	</bean>
    

</beans>